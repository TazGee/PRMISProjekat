<Window x:Class="UserClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserClient"
        mc:Ignorable="d"
        Title="SmartHouse" Height="480" Width="800"
        Background="#1B1F2D">
    <Grid>
        <Grid x:Name="ConnectionGrid">
            <TextBlock Foreground="#FFFFFF" Text="POVEZIVANJE NA SERVER" FontSize="44" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,30"/>
            <Grid x:Name="ServerPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Visibility="Visible">
                <StackPanel>
                    <TextBlock Text="IP Adresa Servera" Foreground="#FFFFFF" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBox x:Name="ConnectionIP" Height="24" FontSize="14"  Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,10" VerticalContentAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="Port" Foreground="#FFFFFF" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBox x:Name="ConnectionPort" Height="24" FontSize="14"  Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,10" VerticalContentAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Button Content="Povezi se" FontSize="18" Height="40" VerticalAlignment="Bottom" Background="#294C60" Foreground="#FFFFFF" Width="180" Margin="0,10,0,30" Click="ConnectToServer"/>
        </Grid>
        
        
        <Grid x:Name="AuthGrid" Visibility="Collapsed">
        <TextBlock x:Name="LoginTitle" Foreground="#FFFFFF" Text="PRIJAVA" FontSize="44" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,30"/>
        <TextBlock x:Name="RegisterTitle" Foreground="#FFFFFF" Text="REGISTRACIJA" FontSize="44" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,30" Visibility="Collapsed"/>

        <Grid x:Name="LoginPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Visibility="Visible">
            <StackPanel>
                <TextBlock Text="Nadimak" Foreground="#FFFFFF" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="LoginNickname" Height="24" FontSize="14"  Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,10" VerticalContentAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="Sifra" FontSize="18" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <PasswordBox x:Name="LoginPassword" Height="24" FontSize="14" HorizontalContentAlignment="Center" Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,20" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
        <StackPanel x:Name="LoginButtons" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 30">
            <Button Content="Prijavi se" FontSize="18" Height="40" Background="#294C60" Foreground="#FFFFFF" Width="180" Margin="0,10,0,10"/>
            <Button Content="Registruj se" Height="25" FontSize="12" Background="#294C60" Foreground="#FFFFFF" Width="100" Click="ShowRegister"/>
        </StackPanel>

        <Grid x:Name="RegisterPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Nadimak" FontSize="18" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="RegisterNickname" Height="24" FontSize="14" Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,10" VerticalContentAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="Ime i Prezime" FontSize="18" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="RegisterFirstLastName" Height="24" FontSize="14" Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,10" VerticalContentAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="Sifra" FontSize="18" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <PasswordBox x:Name="RegisterPassword" Height="24" FontSize="14" HorizontalContentAlignment="Center" Background="#294C60" Foreground="#FFFFFF" Margin="0,0,0,20" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
        <StackPanel x:Name="RegisterButtons" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 30" Visibility="Collapsed">
            <Button Content="Registruj se" FontSize="18" Background="#294C60" Foreground="#FFFFFF" Height="40" Width="180" Margin="0,10,0,10"/>
            <Button Content="Prijavi se" Height="25" Background="#294C60" Foreground="#FFFFFF" FontSize="12" Width="100" Click="ShowLogin"/>
        </StackPanel>
        </Grid>
    </Grid>
</Window>
